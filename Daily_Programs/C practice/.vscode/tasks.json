{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "C Build",
      "type": "shell",
      "command": "gcc",
      "args": [
        "-std=c11",
        "-Wall",
        "-g",
        "${file}",
        "-o",
        "${fileDirname}\\${fileBasenameNoExtension}.exe"
      ],
      "group": { "kind": "build", "isDefault": true },
      "problemMatcher": ["$gcc"]
    },
    {
      "label": "C Run",
      "type": "shell",
      "dependsOn": "C Build",
      "command": "${fileDirname}\\${fileBasenameNoExtension}.exe",
      "options": { "cwd": "${fileDirname}" }
    }
  ]
}